<div class="root">
  <div class="row">
      <div class="span12">
          <div class="grey-box">
            <h4>Listing litters</h4>

            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Pregnancy</th>
                  <th>Birthday</th>
                  <th>Gender</th>
                  <th>Color</th>
                  <th>Survival</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @litters.each do |litter| %>
                  <tr>
                    <td><%= litter.pregnancy.dog.name %></td>
                    <td><%= litter.pregnancy.surgery_date %></td>
                    <td><%= litter.gender %></td>
                    <td><%= litter.color.name %></td>
                    <td><%= litter.survival %></td>
                    <td><%= link_to 'Show', litter %></td>
                    <td><%= link_to 'Edit', edit_litter_path(litter) %></td>
                    <td><%= link_to 'Destroy', litter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>

            <%= link_to 'New Litter', new_litter_path %>
        </div>      
      </div>
  </div>
</div>