<div class="root">
  <div class="row">
    <div class="span12">
      <div class="grey-box">  
        <h1>Listing colors</h1>

        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @colors.each do |color| %>
              <tr>
                <td><%= color.name %></td>
                <td><%= link_to 'Show', color %></td>
                <td><%= link_to 'Edit', edit_color_path(color) %></td>
                <td><%= link_to 'Destroy', color, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Color', new_color_path %>
      </div>
    </div>
  </div>
</div>