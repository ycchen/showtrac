<div class="root">
  <div class="row">
    <div class="span12">
      <div class="grey-box">
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Dog:</strong>
        <%= @sale.dog.name %>
      </p>

      <p>
        <strong>Customer:</strong>
        <%= @sale.customer.name %>
      </p>

      <p>
        <strong>Sale date:</strong>
        <%= @sale.sale_date %>
      </p>

      <p>
        <strong>Sale price:</strong>
        <%= number_to_currency(@sale.sale_price, :locale=>'zh-TW') %>
      </p>

      <p>
        <strong>Note:</strong>
        <%= @sale.note %>
      </p>

      <p>
        <strong>Payment(s):</strong>
        <table class="table table-strped">
        <% @sale.payments.each do |pay| %>
          <tr>
            <td><%= pay.payment_date %></td>
            <td><%= pay.payment_type.name %></td>
            <td><%= number_to_currency(pay.amount, :locale => 'zh-TW') %></td>
            <td><%= pay.payment_status.name %></td>
            <td><%= pay.note %></td>
          </tr>
        <% end %>
        </table>
      </p>
      <%= link_to 'Edit', edit_sale_path(@sale) %> |
      <%= link_to 'Back', sales_path %>
      </div>
    </div>
  </div>
</div>
