<div class="root">
  <div class="row">
      <div class="span12">
          <div class="grey-box">
            <h4>Listing matings</h4>

            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Pregnancy</th>
                  <th>Heat start date</th>
                  <th>Mating date</th>
                  <th>Sire</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @matings.each do |mating| %>
                  <tr>
                    <td><%= mating.pregnancy.dog.name %></td>
                    <td><%= mating.pregnancy.heat_start_date %></td>
                    <td><%= mating.mating_date %></td>
                    <td><%= mating.sire.name %></td>
                    <td><%= link_to 'Show', mating %></td>
                    <td><%= link_to 'Edit', edit_mating_path(mating) %></td>
                    <td><%= link_to 'Destroy', mating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>

            <%= link_to 'New Mating', new_mating_path %>
        </div>
      </div>
  </div>
</div>