<div class="root">
  <div class="row">
    <div class="span12">
      <div class="grey-box">
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Dog:</strong>
        <%= @dog_expense.dog.name %>
      </p>
      <p>
        <strong>Call Name:</strong>
        <%= @dog_expense.dog.call_name %>
      </p>
      <p>
        <strong>Charge:</strong>
        <%= @dog_expense.charge.name %>
      </p>

      <p>
        <strong>Charge date:</strong>
        <%= @dog_expense.charge_date %>
      </p>

      
      <% if !@dog_expense.show_entry.nil? %>
      <p>
        <strong>Show info:</strong>
        <pre>
        Kennel Club: <%= @dog_expense.show_entry.show.kennel_club %>
        Show Date:<%= @dog_expense.show_entry.show_date %>
        Points:<%= @dog_expense.show_entry.points %>
        Title:<%= @dog_expense.show_entry.title %>
      </pre>
        
      </p>
      <% end %>
      
      <p>
        <strong>Amount:</strong>
        <%= number_to_currency(@dog_expense.amount) %>
      </p>
      <p>
        <strong>Note:</strong>
        <%= @dog_expense.note %>
      </p>

      <%= link_to 'Edit', edit_dog_expense_path(@dog_expense) %> |
      <%= link_to 'Back', dog_expenses_path %>
      </div>
    </div>
  </div>
</div>